datasource DS {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

/// Define your own datamodels here and run `yarn redwood db save` to create
/// migrations for them.
model Post {
  /// this is the post id
  id       Int       @id @default(autoincrement())
  title    String
  slug     String    @unique
  author   String
  body     String
  image    String?
  tags     Tag[]
  postedAt DateTime?
}

model Tag {
  id    Int    @id @default(autoincrement())
  name  String @unique
  posts Post[]
}

model User {
  id    Int     @id @default(autoincrement())
  name  String?
  // also known as: electronic mail
  email String  @unique

  hasAdministrativeAccess Boolean @default(false)
}
