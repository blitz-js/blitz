{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ],
    "nohoist": [
      "husky",
      "**/@prisma",
      "**/@prisma/**"
    ]
  },
  "engines": {
    "yarn": "^1.19.1",
    "node": ">=12.16.1"
  },
  "scripts": {
    "dev": "concurrently \"yarn dev-packages\"",
    "dev-packages": "lerna run start --scope @blitzjs/* --stream --parallel",
    "dev-blitz": "yarn workspace blitz start",
    "postinstall": "npm rebuild husky",
    "build": "lerna run build --scope blitz --scope @blitzjs/* --stream",
    "prepublishOnly": "lerna run build --scope blitz --scope @blitzjs/* && lerna run test --parallel",
    "pretest": "lerna run build --scope blitz --scope @blitzjs/*",
    "test": "lerna run test --parallel"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.7.4",
    "@wessberg/cjs-to-esm-transformer": "^0.0.19",
    "@wessberg/rollup-plugin-ts": "^1.2.24",
    "chalk": "^4.0.0",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.0",
    "debug": "^4.1.1",
    "husky": "^4.2.3",
    "jest": "24.9.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "minimist": "^1.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "pretty-quick": "2.0.1",
    "prompt": "^1.0.0",
    "rollup": "^2.6.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.2",
    "semver": "^7.3.2",
    "ts-jest": "24.3.0",
    "tsdx": "^0.13.1",
    "tslib": "^1.10.0",
    "typescript": "^3.7.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "yarn test"
    }
  },
  "resolutions": {
    "jest": "24.9.0",
    "ts-jest": "24.3.0"
  }
}
