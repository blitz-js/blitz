{
  "name": "blitz-root",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "build": "turbo run build",
    "dev": "turbo run dev --no-cache --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "dependencies": {
    "@blitzjs/manypkg": "0.19.1",
    "eslint": "7.32.0",
    "husky": "7.0.4",
    "jsdom": "19.0.0",
    "lint-staged": "12.1.7",
    "next": "12.0.7",
    "only-allow": "1.1.0",
    "patch-package": "6.4.7",
    "prettier": "^2.5.1",
    "prettier-plugin-prisma": "3.8.0",
    "pretty-quick": "3.1.3",
    "turbo": "1.1.5",
    "vitest": "0.6.0",
    "wait-on": "6.0.1"
  },
  "npmClient": "pnpm",
  "packageManager": "pnpm@6.21.0"
}
