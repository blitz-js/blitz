{
  "compilerOptions": {
    "skipLibCheck": true,
    "strict": true,
    "module": "esnext",
    "target": "ES2017",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "useUnknownInCatchVariables": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "jsx": "react"
  },
  "exclude": ["dist", "./*.d.ts"]
}
